{
  "name": "@marcalexiei/devtools-wiki",
  "private": true,
  "version": "1.0.0",
  "description": "Static site with a list of development resources",
  "keywords": [],
  "author": "Marco Pasqualetti @marcalexiei",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcalexiei/devtools-wiki.git"
  },
  "type": "module",
  "packageManager": "pnpm@10.8.0+sha512.0e82714d1b5b43c74610193cb20734897c1d00de89d0e18420aebc5977fa13d780a9cb05734624e81ebd81cc876cd464794850641c48b9544326b5622ca29971",
  "scripts": {
    "dev": "vite",
    "dev:typecheck": "pnpm run typecheck -- --watch",
    "build": "vite build",
    "build:preview": "pnpm run build && vite preview",
    "test": "vitest",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "format": "biome format .",
    "format:fix": "biome format . --write",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "check-all": "pnpm run \"/^(build|lint|format|typecheck)$/\" && pnpm run test --run"
  },
  "dependencies": {
    "@solidjs/router": "0.15.3",
    "@tanstack/solid-query": "5.74.0",
    "solid-js": "1.9.5",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@marcalexiei/biome-config": "1.1.0",
    "@solidjs/testing-library": "0.8.10",
    "@testing-library/jest-dom": "6.6.3",
    "@types/node": "24.0.15",
    "happy-dom": "17.4.4",
    "sass-embedded": "1.89.2",
    "typescript": "5.8.3",
    "vite": "7.0.5",
    "vite-plugin-solid": "2.11.7",
    "vitest": "3.1.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
